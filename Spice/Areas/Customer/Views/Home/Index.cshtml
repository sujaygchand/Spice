@model Spice.Models.ViewModels.IndexViewModel

<br />

@if (Model.Coupons.ToList().Count > 0)
{
	<div class="border">
		<div class="carousel" data-ride="carousel" data-interval="2400">
			@for (int i = 0; i < Model.Coupons.Count(); i++)
			{
				if (i == 0)
				{
					<div class="carousel-item active">
						@{
							var base64 = Convert.ToBase64String(Model.Coupons.ToList()[i].Picture);
							var couponImage = string.Format("data:image/jpg;base64,{0}", base64);
						}

						<img src="@couponImage" height="50px" class="d-block w-100" />
					</div>
				}
				else
				{
					<div class="carousel-item">
						@{
							var base64 = Convert.ToBase64String(Model.Coupons.ToList()[i].Picture);
							var couponImage = string.Format("data:image/jpg;base64,{0}", base64);
						}

						<img src="@couponImage" height="50px" class="d-block w-100" />
					</div>
				}

			}
		</div>
	</div>
}

<br /> <br />

<div class="backgroundWhite container">
	@foreach(var category in Model.Categories)
	{
		<div class="row">
			<partial name="_ThumbnailAreaPartial" model="@Model.MenuItems.Where(k => k.Category.Name.Equals(category.Name))"/>
		</div>
	}

</div>