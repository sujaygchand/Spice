@model IEnumerable<Spice.Models.ViewModels.OrderDetailsViewModel>

@{ 
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="border backgroundWhite">
	<div class="row">
		<div class="col-6">
			<h2 class="text-info"> Category List</h2>
		</div>
		<div class="col-6 text-right">
			<partial name="_CreateButtonPartial" />
		</div>
	</div>
	<br />
	<div>
		@if(Model.Count() > 0)
		{
		<table class="table table-striped border">
			<tr class="table-secondary">
				<th>
					@Html.DisplayNameFor(k => k.OrderHeader.Id)
				</th>
				<th>
					@Html.DisplayNameFor(k => k.OrderHeader.PickupName)
				</th>
				<th>
					@Html.DisplayNameFor(k => k.OrderHeader.ApplicationUser.Email)
				</th>
				<th>
					@Html.DisplayNameFor(k => k.OrderHeader.PickUpTime)
				</th>
				<th>
					@Html.DisplayNameFor(k => k.OrderHeader.OrderTotal)
				</th>
				<th>
					Total Time
				</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<th>
						@Html.DisplayFor(k => item.OrderHeader.Id)
					</th>
					<th>
						@Html.DisplayFor(k => item.OrderHeader.PickupName)
					</th>
					<th>
						@Html.DisplayFor(k => item.OrderHeader.ApplicationUser.Email)
					</th>
					<th>
						@Html.DisplayFor(k => item.OrderHeader.PickUpTime)
					</th>
					<th>
						@Html.DisplayFor(k => item.OrderHeader.OrderTotal)
					</th>
				</tr>
			}
		</table>
		}
		else
		{
			<p>No category exists...</p>
		}
	</div>
</div>