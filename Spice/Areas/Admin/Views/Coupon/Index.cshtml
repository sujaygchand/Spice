
@model IEnumerable<Coupon>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
	<div class="row">
		<div class="col-6">
			<h2 class="text-info">Coupon List</h2>
		</div>
		<div class="col-6 text-right">
			<partial name="_CreateButtonPartial" />
		</div>
	</div>
	<br />
	<div>
		@if (Model.Count() < 1)
		{
			<p>No category exists...</p>
		}
		else
		{
			<table class="table table-striped border">
				<tr class="table-secondary">
					<th>
						@Html.DisplayNameFor(k => k.Name)
					</th>
					<th>
						@Html.DisplayNameFor(k => k.Discount)
					</th>
					<th>
						@Html.DisplayNameFor(k => k.MinimumAmount)
					</th>
					<th>
						@Html.DisplayNameFor(k => k.IsActive)
					</th>
					<th></th>
					<th></th>
				</tr>
				@foreach (var item in Model)
				{
			<tr>
				<td>
					@Html.DisplayFor(k => item.Name)
				</td>
				<td>
					@Html.DisplayFor(k => item.Discount)
				</td>
				<td>
					@Html.DisplayFor(k => item.MinimumAmount)
				</td>
				<td>
					@Html.DisplayFor(k => item.IsActive)
				</td>
				<td>
					<partial name="_TableButton" model="item.Id" />
				</td>
			</tr>
				}

			</table>
		}
	</div>
</div>

